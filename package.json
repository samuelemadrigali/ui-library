{
  "name": "@samuelemadrigali/ui-library",
  "version": "1.7.1",
  "description": "UI library React + Tailwind",
  "repository": {
    "type": "git",
    "url": "https://github.com/samuelemadrigali/ui-library.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "main": "./dist/ui-library.cjs.js",
  "module": "./dist/ui-library.es.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/ui-library.es.js",
      "require": "./dist/ui-library.cjs.js"
    }
  },
  "files": [
    "dist",
    "src",
    "COMPONENTS.md"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "echo \"Error: no test specified\" && exit 1",
    "release:patch": "standard-version --release-as patch && git push --follow-tags && npm publish",
    "release:minor": "standard-version --release-as minor && git push --follow-tags && npm publish",
    "release:major": "standard-version --release-as major && git push --follow-tags && npm publish",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "author": "Samuele Madrigali",
  "license": "ISC",
  "peerDependencies": {
    "lucide-react": ">=0.400.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@storybook/react-vite": "^10.1.11",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.0.0",
    "prop-types": "^15.8.1",
    "standard-version": "^9.5.0",
    "storybook": "^10.1.11",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.52.0",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-visually-hidden": "^1.2.4",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2"
  }
}
